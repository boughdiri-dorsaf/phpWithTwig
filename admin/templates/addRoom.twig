{% extends 'base.twig' %}

{% import 'form.twig' as form %}

{% block title %}Ajouter Une nouvelle Chambre{% endblock %}

{% block body %}

<br \>
    <header class="page-header"><meta http-equiv="Content-Type" content="text/html; charset=euc-kr">
        <h1 class="h3 mb-4 text-gray-800">Ajouter Une nouvelle Chambre </h1>
    </header>
    <div class="row">
        <div class="col-md-12">
        <br \ ><br \>
            <form id="form1" name="form1" method="post" action="{{ actionAdd }}">
                <div class="row">
                    <div class="col-md-12">
                        
                        {{ form.inputRequired('f_nom', 'Nom de Chambre') }}

                        {{ form.inputRequired('f_image', 'Image de Chambre') }}

                        <div class="form-group">
                            <label for="f_type">Type de Chambre</label>
                            <select name="f_type" id="f_type" class="form-control">
                                {% for type in types %}
                                    <option value="{{ type.id }}">{{ type.type }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                {{ form.textareaRequired('f_description', 'Decription') }}
                            <div>
                        </div>

                    </div>
                </div>
                <div align="right">
                    <a class="btn btn-secondary" href="rooms.php?page=rooms.twig">Annuler</a>
                    <button type="submit" class="btn btn-success">Valider</button>
                </div>
            </form>
        </div>
    </div>
    <br \><br \>
    <script src="https://cdn.ckeditor.com/4.13.0/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace( 'f_description' );
    </script>
{% endblock %}