
{% extends 'base.twig' %}

{% block title %}Liste des Chambres{% endblock %}

{% block body %}

	<div class="row">
	    <section class="col-md-12 table-responsive">
	    	<header class="page-header">
		        <h1 class="h3 mb-4 text-gray-800">Liste des Chambres </h1>
		    </header>
			<div class="row">
				<div class="col-md-12">
					<br \><br \>
					<table class="table table-bordered table-striped table-condensed">
						<thead>
						<tr>
							<th>N°</th>
							<th>Nom</th>
							<th>Image</th>
                            <th>Description</th>
							<th></th>
							<th></th>
						</tr>
						</thead>
						<tbody>
						{% for room in rooms %}
							<tr>
								<td class="text-black">{{ room.id }}</td>
								<td class="text-black">{{ room.nom }}</td>
								<td class="text-black"><img src="../assets/img/{{ room.image }}" width="250px" height="200px" /> </td>
                                <td class="text-black">{{ room.description }}</td>
								<td class="text-black"><a class="btn btn-success" href="rooms.php?page=editRoom.twig&id={{ room.id }}">Editer</a></td>
								<td class="text-black"><button class="btn btn-danger" data-toggle="modal" data-target="#confirm-delete{{ room.id }}">Supprimer</button></td>
							</tr> 
							<div class="modal fade" id="confirm-delete{{ room.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
								<div class="modal-dialog">
									<div class="modal-content">
										<div class="modal-header">
											Confirmation de suppression
										</div>
										<div class="modal-body">
											Êtes-vous sûr de vouloir supprimer cette chambre ?
										</div>
										<div class="modal-footer">
											<button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
											<a class="btn btn-danger btn-ok" href="deleteRoom.php?id={{ room.id }}">Supprimer</a>
										</div>
									</div>
								</div>
							</div>
						{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
	    </section>
	</div>

	
{% endblock %}